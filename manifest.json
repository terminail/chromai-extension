{
  "manifest_version": 3,
  "name": "Chromai Extension",
  "version": "1.0.0",
  "description": "Monitors API communications and records question/answer content with timestamps",
  
  "permissions": [
    "webRequest",
    "storage",
    "activeTab",
    "scripting"
  ],
  
  "host_permissions": [
    "https://api.deepseek.com/*",
    "https://chat.deepseek.com/*",
    "https://www.doubao.com/*",
    "https://ark.cn-beijing.volces.com/*",
    "*://*/*"
  ],
  
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Chromai"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["inject.js"],
      "matches": ["<all_urls>"]
    }
  ],
  
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}